            }
        });
        //var itemWidth = ($(".main-menu-list").width() - 4*20)/4;
        //$(".main-menu").width(itemWidth);
        $(".main-menu").click(function(){
            var $menu = $(this);
            $(".main-menu-list .active").removeClass("active");
            window.activeMenu = $menu;
            $menu.addClass("active");
            if($menu.hasClass('menu-index')){
                //显示首页
                $(".left .menu ul").empty();
                $(".right .main").removeClass("showpage");
                $(".intro").show();
                $(".menu-index").hide();
                return ;
            }
            $(".right .main").addClass("showpage");
            $(".left .menu ul").html($menu.find("ul").html());
            var $firstMenu = $(".left .menu ul li").eq(0);
            $firstMenu.addClass("selected");
            $(".right iframe").attr("src",$firstMenu.find("a").attr("href"));
            $(".intro").hide();
            $(".menu-index").show();
        });
        $(".main-menu").hover(function(){
            if($(".right .main").hasClass("showpage")){
                if($(this).attr("id") != window.activeMenu.attr("id")){
                    window.activeMenu.removeClass("active");
                }
            }
        },function(){
            if($(".right .main").hasClass("showpage")){
                window.activeMenu.addClass("active");
            }
        });
        $(".left .menu").delegate("li","click",function(){
            $(".left .menu ul li.selected").removeClass("selected");
            $(this).addClass("selected");
        });
        $(".backtomenu").click(function(){
            $(".left .menu ul").empty();
            $(".right .main").removeClass("showpage");
            $(".intro").show();
            $(".menu-index").hide();
        });
        $("a[target='main']").click(function(){
            $(".right .main").addClass("showpage");
            $(".menu-index").show();
        });
