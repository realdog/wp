        function getUrlParam(name) {
            var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
            var r = window.location.search.substr(1).match(reg);  //匹配目标参数
            if (r!=null) return unescape(r[2]); return null; //返回参数值
        }
        $(document).ready(function() {
            var targetParam = getUrlParam("target");
            var $href = $(".main-menu-list ul>li>a[href*='"+ targetParam + "']");
            if ($href.length > 0) {
                $(".right .main").addClass("showpage");
                $(".left .menu ul").html($href.closest("ul").html());
                $(".left .menu ul li:eq(" + $href.closest("li").index() + ")").addClass("selected");
                $(".right iframe").attr("src",$href.attr("href"));
                $(".intro").hide();
            }
        });
        // 动态计算iframe高度
        $(".main iframe").height($(".right").height() - 95);
    });
